{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClaudeCoWork Desktop",
  "version": "0.1.0",
  "identifier": "com.summer.claudecowork",
  "build": {
    "beforeDevCommand": "npm run dev --prefix apps/desktop",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build --prefix apps/desktop",
    "frontendDist": "../apps/desktop/dist"
  },
  "app": {
    "windows": [
      {
        "title": "ClaudeCoWork Desktop",
        "width": 1280,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis"],
    "icon": []
  }
}
